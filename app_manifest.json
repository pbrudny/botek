{
  "_metadata": {
    "major_version": 2,
    "minor_version": 1
  },
  "display_information": {
    "name": "Botek",
    "description": "A bot that helps with grading and rewarding users",
    "background_color": "#4A154B"
  },
  "settings": {
    "socket_mode_enabled": true,
    "interactivity": {
      "is_enabled": true
    }
  },
  "features": {
    "bot_user": {
      "display_name": "Botek",
      "always_online": true
    },
    "slash_commands": [
      {
        "command": "/botek",
        "description": "Interact with Botek",
        "usage_hint": "help, echo [message], grade @user [score] for [test], give extra to @user",
        "should_escape": false
      }
    ]
  },
  "oauth_config": {
    "scopes": {
      "bot": [
        "commands",
        "chat:write",
        "chat:write.public",
        "im:write",
        "users:read"
      ]
    }
  }
}
